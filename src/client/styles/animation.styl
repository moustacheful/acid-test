@keyframes scaleIn
	0%
		opacity 0
		transform scale(.9)

@keyframes slideUp
	0%
		opacity 0
		transform translateY(20px)
		
@keyframes slideDown
	0%
		opacity 0
		transform translateY(-20px)

@keyframes tickRed
	0%
		background alpha($red,0.1)
	100%
		background inherit

@keyframes tickGreen
	0%
		background alpha($green,0.1)
	100%
		background inherit	