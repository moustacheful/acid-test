@import vars
@import mixins
@import animation

*
	box-sizing border-box

a
	color #0f0f0f
	&:hover
		color lighten(#0f0f0f,20%)

body
	font-family 'Roboto Condensed'
	font-weight 300
	font-size 14px
	background #fefefe
	margin 0 
	padding 0
	padding-top 100px
	color #333

#root
	min-height 600px

footer
	border-top 1px solid #eaeaea 
	text-align center
	font-size 12px
	padding 10px
	color #aaa

h1,h2
	margin 0
	font-weight 700
	
	
h3,h4
	margin 0
	font-weight 300

.stock-ticker
	max-width 1200px
	margin 0 auto
	padding-left 2px
	text-align center
	display flex
	flex-wrap wrap
	justify-content center
	animation slideUp .5s ease both

	.stock
		proportional(1,1)
		cursor pointer
		display flex
		flex 1 1 0px
		min-width 50%
		max-width 50%
		border 1px solid #eee
		text-align center
		margin-top -1px
		margin-left -1px
		padding 20px
		align-items center
		position relative

		&.animate.stock-up 
			animation tickGreen 2s ease .3s
			
		&.animate.stock-down 
			animation tickRed 2s ease .3s

		&:hover
			h2
				transform translateY(-10px)
		
		h2
			transition transform .3s ease
			font-size 50px
			line-height 50px
		
		h3
			font-size 30px
		
		h4
			i
				margin-right 5px
		
		.inner 
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			display table

		.content
			display table-cell
			vertical-align middle
		
		&.stock-down h4
			color $red
		
		&.stock-up h4
			color $green
			
		@media $from-xs
			min-width 33.3%
			max-width 33.3%
		
		@media $from-sm
			min-width 25%
			max-width 25%
		
		@media $from-md
			min-width 20%
			max-width 20%
			
			
#status-display
	animation slideDown .5s ease both
	position fixed
	top 0
	left 0
	z-index 1
	width 100%
	background #f4f4f4
	color white
	text-transform uppercase
	.status-bar
		padding 15px
	
	.status-error
		background $red
		color white
		font-weight bold
		
	.status-health
		color #aaa

		.fa
			margin-right 5px
		.fa-check-circle
			color $green
		.fa-warning
			color $yellow
		
		@media $to-sm
			.status-market
				margin-top 5px
		@media $from-sm
			.status-market
				float right

#stock-detail
	animation scaleIn .5s  ease both 
	cover-container()
	overflow-y auto
	position fixed
	z-index 10
	background #f7f7f7
	.close
		position absolute
		top 5px
		right 5px
		padding 20px
		background white
		cursor pointer
		font-size 20px
		
	h1
		font-size 70px
		text-align center
		margin-bottom 20px
	
	h2
		text-align center
		margin-bottom 20px
		&:after
			content ''
			display block
			margin 0 auto
			margin-top 20px
			background #888
			height 1px
			
	.inner
		max-width 600px
		margin 0 auto
		padding 50px 0px
		@media $from-md
			padding 100px 0px
	
	.chart
		margin-bottom 20px
		@media $to-lg
			padding 0px 10px
		
			
	table
		width 100%
		border-collapse collapse
		
		th,td
			border 1px solid #ededed
			padding 10px
		
		thead
			background #ededed
		
		tbody
			background white
			
		tr.stock-up 
			animation tickGreen 2s ease .3s
			.colorize
				color $green
			
		tr.stock-down 
			animation tickRed 2s ease .3s
			.colorize
				color $red
		
	&.stock-detail-visible
		display block
		
	&.stock-detail-hidden
		display none
		